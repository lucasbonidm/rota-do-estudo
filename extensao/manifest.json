{
  "manifest_version": 3,
  "name": "Rota do Estudo",
  "version": "1.0.0",
  "description": "Adicione vídeos e playlists do YouTube ao seu curso com um clique. Extensão complementar para rota-do-estudo.vercel.app",
  "author": "Lucas Boni de Mattos",
  "homepage_url": "https://github.com/lucasbonidm/rota-do-estudo",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://youtube.com/*",
    "https://rota-do-estudo.vercel.app/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content/youtube.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
